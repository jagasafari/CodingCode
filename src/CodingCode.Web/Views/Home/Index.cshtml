@using CodingCode.Web.ViewModel
@model DalInfoViewModel

<form asp-controller="DynamicRaport" asp-action="CodeDatabaseModel" method="post" class="form-horizontal" role="form">
    <hr />
    <div class="form-group">
        <label asp-for="ConnectionString" class="col-md-2 control-label">Connection: </label>
        <div class="col-md-10">
            <input asp-for="ConnectionString" class="form-control" placeholder="enter connection string" 
                   type="text" value="Server=DELL\SQLEXPRESS;Database=Northwind;Trusted_Connection=True;MultipleActiveResultSets=true"/>
            <span asp-validation-for="ConnectionString" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Connect" class="btn btn-default pull-right" />
    </div>
</form>
