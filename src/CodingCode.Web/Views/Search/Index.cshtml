@using CodingCode.Web.ViewModels
@model SearchedCodeViewModel
<form asp-controller="Search" asp-action="MatchingFiles" method="post" class="form-horizontal"
      role="form">
    <hr />
    <div class="form-group">
        <label asp-for="SearchedPath" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="SearchedPath" class="form-control" placeholder="enter server name"
                   type="text" value="C:\gh" />
            <span asp-validation-for="SearchedPath" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FileExtensionPattern" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="FileExtensionPattern" class="form-control" placeholder="enter server name"
                   type="text" value="*.cs" />
            <span asp-validation-for="FileExtensionPattern" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Keywords" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Keywords" class="form-control" type="text"  />
            <span asp-validation-for="Keywords" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default pull-right">Display</button>
    </div>
</form>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(disableSubmit);
    </script>
}