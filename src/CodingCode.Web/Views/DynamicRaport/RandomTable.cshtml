@using System.Threading.Tasks
@using CodingCode.Controllers
@using CodingCode.ViewModel
@model CodingCode.ViewModel.TableViewModel

<h3>@Model.TableName</h3>
<table class="table">
    <thead>
        <tr>
            @foreach (var columnName in Model.ColumnNames)
            {
                <td>@columnName</td>
            }
        </tr>
    </thead>
    @{ var tmp = Model.Values;}
    @for (int i = 0; i <= tmp.GetUpperBound(0); i++)
    {
        <tr>
            @for (int j = 0; j <= tmp.GetUpperBound(1); j++)
            {
                <td>@tmp[i, j]</td>
            }
        </tr>
    }
</table>